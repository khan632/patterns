// i = inner loop
//j = outer loop
=====================================================JAVA--PROGRAM======================================================================

import java.util.*;
      
      public class Main{
      
      public static void main(String[] args) {
          Scanner scn = new Scanner(System.in);
      
           int n=scn.nextInt();
        
        for(int i=0; i<n; i++)
        {
            for(int j=0; j<=n; j++)
            {
                if(i+j<=n-1){
                System.out.print("*	");
            }
                else {
                    System.out.print("	");
                }
            }
            System.out.println();
        }
      
       }
      }
      
==========================================CPP--PROGRAM======================================================================

#include<iostream>
using namespace std;

int n;
cin>>n;

for(int i = 0; i < n; i++) {
for(int j = 0; j <= n; j++) {
if(i + j == n -1) 
    cout<<"* ";
else
     cout<<" ";
  cout<<endl;
  }
 }
